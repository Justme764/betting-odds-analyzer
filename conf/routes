# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /organizations              controllers.Application.getOrganizations
GET     /events/:orgId              controllers.Application.getEvents(orgId: Int)
GET     /fights/:eventId            controllers.Application.getFights(eventId: Int)
GET     /athletes/:id               controllers.Application.getAthlete(id: Int)

# JS ROUTES
GET     /public/javascript/routes          controllers.Application.javascriptRoutes()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
